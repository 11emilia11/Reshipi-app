<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonBuscarporIngre"
        android:layout_width="298dp"
        android:layout_height="72dp"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:text="Buscar por ingredientes"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="#56ab2f"
        app:layout_constraintBottom_toTopOf="@+id/buttonBuscarporReceita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBuscarporReceita"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="#56ab2f"
        android:layout_width="298dp"
        android:layout_height="72dp"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:text="Buscar por receita "
        app:layout_constraintBottom_toTopOf="@+id/buttonListarReceita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBuscarporIngre" />

    <Button
        android:id="@+id/buttonListarReceita"
        android:layout_width="298dp"
        android:layout_height="72dp"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="139dp"
        android:background="@drawable/rounded_button"
        android:text="Listar receitas"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="#56ab2f"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBuscarporReceita" />

</android.support.constraint.ConstraintLayout>